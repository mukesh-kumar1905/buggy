<form id="new_project" action="/projects" method="post">
	<fieldset>
		<legend>New Project</legend>
		<label for="name">Project Name</label><br/>
		<input type="text" name="name" id="name" placeholder="Project Name"/><br/>
		<label for="description">Description</label><br/>
		<textarea id="description" name="description" rows="5" cols="30" placeholder="Description"></textarea>
		<br/>
		<button type="submit" class="btn">&nbsp;Submit&nbsp;</button>
	</fieldset>	
</form>